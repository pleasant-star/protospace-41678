<div class="card">
  <% if prototype.image.attached? %>
    <%= link_to image_tag(prototype.image), prototype_path(prototype.id), class: "card__img" %>
  <% else %>
    <%= link_to "No Image Available", prototype_path(prototype.id), class: "card__img" %>
  <% end %>
  <div class="card__body">
    <%= link_to prototype.title, prototype_path(prototype.id), class: "card__title" %>
    <p class="card__summary">
      <%= prototype.catch_copy %>
    </p>
    <%= link_to "by #{prototype.user.name}", "/users/#{prototype.user.id}", class: :card__user %>
  </div>
</div>